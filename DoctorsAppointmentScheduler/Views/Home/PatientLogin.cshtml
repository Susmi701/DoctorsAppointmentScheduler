@{
}
@model DoctorsAppointmentScheduler.Models.LoginViewModel
<h2>Login</h2>
<form asp-action="Login" asp-controller="Patient" method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Login</button>
</form>

<div>
    <a asp-action="ForgotPassword" asp-controller="Patient">Forgot Password?</a>
</div>

<div>
    <a asp-action="Register" asp-controller="Patient">Register New User</a>
</div>