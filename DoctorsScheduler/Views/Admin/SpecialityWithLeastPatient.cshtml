
@using Microsoft.AspNetCore.Mvc
@{
    Layout = "AdminIndex";
}
@model IEnumerable<DoctorsAppointmentScheduler.DTO.CountDTO>

@{
    ViewData["Title"] = "History";
}

<table class="speciality-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Patient Count</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .speciality-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .speciality-table th {
            background-color: #f2f2f2;
            text-align: left;
            padding: 8px;
        }

        .speciality-table td {
            border-bottom: 1px solid #ddd;
            padding: 8px;
        }

        .speciality-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .speciality-table tbody tr:hover {
            background-color: #e2e2e2;
        }
</style>