@using Microsoft.AspNetCore.Mvc
@{
    Layout = "HomeIndex";
}
@model DoctorsAppointmentScheduler.DTO.ResetPasswordDTO

@{
    ViewData["Title"] = "ForgotPassword";
}
<section>
    
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-85">
            <div class="col-xl-10">
                <div class="row justify-content-center">
                    <div class="col-lg-6" style="background-color: white;">
                        <div class="card-body p-md-5 mx-md-4">
                            <div>

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Reset Password</p>

                                <form asp-action="MedicalForgotPassword" asp-controller="Home" method="post" class="mx-1 mx-md-4">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Username"></label>
                                            <input asp-for="Username" class="form-control" />
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="DOB" class="control-label"></label>
                                            <input asp-for="DOB" class="form-control" />
                                            <span asp-validation-for="DOB" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="NewPassword" class="control-label"></label>
                                            <input asp-for="NewPassword" class="form-control" />
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ConfirmPassword" class="control-label"></label>
                                            <input asp-for="ConfirmPassword" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary">Reset Password</button>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <a type="button" class="btn btn-light" href="@Url.Action("MedicalStaffLogin", "Home")" style="display:block">Back</a>
                                    </div>

                                </form>                       
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    setTimeout(function () {
        $('.alert').fadeOut('slow');
    }, 3000);
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}