</script>
<style>
    #dateTimeSelection {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
    }

    .date-time-box-container {
        margin: 10px;
    }

    .time-slot-boxes {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .time-slot-box {
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin: 5px;
        padding: 10px;
        cursor: pointer;
    }

        .time-slot-box.selected {
            background-color: #a0a0a0;
        }

    #selectedDateTime {
        display: none;
    }

    #searchButton {
        margin-top: 10px;
        font-size: 16px;
        background-color: lightblue;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
</style>

